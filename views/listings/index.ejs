<% layout('/layouts/boilerplate') %>



<body>
  <div class="container">
    <!-- Filters Collapse Button for Small Screens -->
    <button class="btn btn-outline-secondary d-lg-none mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse" aria-expanded="false" aria-controls="filtersCollapse">
      Filters <i class="fa-solid fa-sliders"></i>
    </button>

    <!-- Filters Section -->
    <div class="collapse d-lg-block" id="filtersCollapse">
      <div id="filters">
        <div class="filter">
          <i class="fa-solid fa-fire" style="color: orangered;"></i>
          <a href="/listings?category=Trending" style="text-decoration: none; color: black;"><p>Trending</p></a>
        </div>
        <div class="filter">
          <i class="fa-solid fa-bed" style="color: #6c5ce7;"></i>
          <a href="/listings?category=Rooms"  style="text-decoration: none; color: black;" ><p>Rooms</p></a>
        </div>
        <div class="filter">
          <i class="fa-solid fa-mountain-city"  style="color: #f39c12;"></i>
          <a href="/listings?category=Iconic Cities"  style="text-decoration: none; color: black;" ><p>Iconic Cities</p></a>
        </div>
        <div class="filter">
          <i class="fa-solid fa-mountain-sun" style="color:	#27ae60 ;"></i>
          <a href="/listings?category=Mountains"  style="text-decoration: none; color: black;" ><p>Mountains</p></a>
        </div>
        <div class="filter">
          <i class="fa-brands fa-fort-awesome" style="color: #d63031 ;"></i>
          <a href="/listings?category=Castles"  style="text-decoration: none; color: black;" ><p>Castles</p></a>
        </div>
        <div class="filter">
          <i class="fa-solid fa-snowflake" style="color:#74b9ff ;"></i>
          <a href="/listings?category=Arctic"  style="text-decoration: none; color: black;" ><p>Arctic</p></a>
        </div>
        <div class="filter">
          <i class="fa-solid fa-person-swimming" style="color: #00cec9;"></i>
          <a href="/listings?category=Swimming Pool"  style="text-decoration: none; color: black;" ><p>Swimming Pool</p></a>
        </div>
        <div class="filter">
          <i class="fa-solid fa-tents" style="color: 	#fdcb6e ;"></i>
          <a href="/listings?category=Tents"  style="text-decoration: none; color: black;" ><p>Tents</p></a>
        </div>
 <div class="filter">
        <i class="fa-solid fa-igloo" style="color: #74b9ff;"></i>
 <a href="/listings?category=Dome"  style="text-decoration: none; color: black;" ><p>Dome</p></a>
        </div>
        <!-- GST Toggle Switch inside filters -->
        <div class="filter">
          <div class="form-check-reverse form-switch toggle">
             <label class="form-check-label" for="flexSwitchCheckDefault">Include GST Info</label>
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
           
          </div>
        </div>
      </div>
    </div>

    <!-- Listings Grid -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let listing of listings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card listing-card mb-4">
            <img class="card-img-top" src="<%= listing.image.url %>" alt="Card image cap" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <b><p class="card-text"><%= listing.title %>
              </b>
              <br>
              â‚¹<%= listing.price.toLocaleString("en-IN") %> /night
              <span class="tax-info">+18% GST</span>
              </p>
            </div>
          </div>
        </a>
      <% } %>
    </div>
  </div>
</body>

<script>
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    const taxInfos = document.getElementsByClassName("tax-info");
    for (let info of taxInfos) {
      if (info.style.display === "none" || info.style.display === "") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
